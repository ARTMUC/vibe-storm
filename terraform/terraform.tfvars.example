# AWS Configuration
aws_region = "us-west-2"

# Project Configuration
project_name = "vibe-storm"
environment  = "dev"

# Network Configuration
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.3.0/24", "10.0.4.0/24"]
availability_zones   = ["us-west-2a", "us-west-2b"]

# EC2 Configuration
instance_type        = "t3.micro"
bastion_instance_type = "t3.micro"

# You need to create SSH key pairs and specify their names here
# The actual public key files should be in the terraform directory:
# - bastion.pub for the bastion host
# - app.pub for the application servers
key_pair_name = "your-key-pair-name"

# RDS Configuration
db_instance_class = "db.t3.micro"
db_name           = "vibestorm"
db_username       = "admin"
# db_password should be set in terraform.tfvars (not in version control)
# db_password     = "your-secure-password"

# DNS Configuration
hosted_zone_domain = "example.com"
domain_name        = "app.example.com"

# S3 Configuration
s3_bucket_name = "your-unique-bucket-name"
